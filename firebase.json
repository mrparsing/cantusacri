{
  "hosting": {
    "public": "public", 
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0, no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/canti/testo/**",
        "destination": "/nav-bar/testo.html"
      },
      {
        "source": "/proposta-canti/celebrazione/**",
        "destination": "/celebrazioni.html"
      },
      {
        "source": "/elenco-canti",
        "destination": "/nav-bar/elenco_canti.html"
      },
      {
        "source": "/spartiti-salmi",
        "destination": "/nav-bar/spartiti_salmi.html"
      },
      {
        "source": "/anno-liturgico",
        "destination": "/nav-bar/anno_liturgico.html"
      },
      {
        "source": "/brani-eventi-speciali",
        "destination": "/nav-bar/eventi_speciali.html"
      },
      {
        "source": "/imp-supporto",
        "destination": "/nav-bar/imp_supporto.html"
      },
      {
        "source": "/salmi-anno-A",
        "destination": "/nav-bar/salmi.html"
      },
      {
        "source": "/salmi-anno-B",
        "destination": "/nav-bar/salmi.html"
      },
      {
        "source": "/salmi-anno-C",
        "destination": "/nav-bar/salmi.html"
      },
      {
        "source": "/salmi-altre-festivita",
        "destination": "/nav-bar/salmi.html"
      },
      {
        "source": "/salmi-eventi-speciali",
        "destination": "/nav-bar/salmi.html"
      }
    ]
  }
}